      },
      "post": {
        "tags": ["Purchases"],
        "summary": "Crea un nuovo acquisto",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "company_id": {
                  "type": "integer",
                  "description": "ID dell'azienda fornitrice"
                },
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "item_id": {
                        "type": "integer",
                        "description": "ID del prodotto"
                      },
                      "quantity": {
                        "type": "integer",
                        "description": "Quantità da acquistare"
                      },
                      "unit_price": {
                        "type": "number",
                        "format": "float",
                        "description": "Prezzo unitario"
                      }
                    },
                    "required": ["item_id", "quantity", "unit_price"]
                  }
                },
                "notes": {
                  "type": "string",
                  "description": "Note aggiuntive"
                },
                "status": {
                  "type": "string",
                  "description": "Stato iniziale dell'acquisto",
                  "default": "pending",
                  "enum": ["pending", "confirmed", "delivered", "cancelled"]
                }
              },
              "required": ["company_id", "items"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Acquisto creato con successo",
            "schema": {
              "$ref": "#/definitions/Purchase"
            }
          },
          "400": {
            "description": "Dati mancanti o non validi"
