      "post": {
        "tags": ["Items"],
        "summary": "Crea un nuovo prodotto",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
