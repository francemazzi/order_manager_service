{
  "swagger": "2.0",
  "info": {
    "title": "Order Manager API",
    "description": "API per la gestione degli ordini",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "schemes": ["http", "https"],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registra un nuovo utente",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Utente registrato con successo"
          },
          "400": {
            "description": "Dati mancanti o non validi"
          },
          "409": {
            "description": "Email già registrata"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Effettua il login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login effettuato con successo",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": {
                  "type": "string"
                },
                "user": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Credenziali non valide"
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Ottiene i dati dell'utente corrente",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Dati utente recuperati con successo"
          },
          "401": {
            "description": "Non autorizzato"
          },
          "404": {
            "description": "Utente non trovato"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Ottiene la lista di tutti gli utenti",
        "responses": {
          "200": {
            "description": "Lista degli utenti recuperata con successo",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Crea un nuovo utente",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "is_active": {
                  "type": "boolean",
                  "default": true
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Utente creato con successo",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Dati mancanti o non validi"
          },
          "409": {
            "description": "Email già registrata"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Ottiene i dettagli di un utente specifico",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Dettagli utente recuperati con successo",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "Utente non trovato"
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Aggiorna i dati di un utente",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "is_active": {
                  "type": "boolean"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Utente aggiornato con successo",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "Utente non trovato"
          },
          "409": {
            "description": "Email già registrata"
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Elimina un utente",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Utente eliminato con successo"
          },
          "404": {
            "description": "Utente non trovato"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "is_active": {
          "type": "boolean"
        }
      }
    }
  }
}
