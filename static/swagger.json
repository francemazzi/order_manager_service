    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registra un nuovo utente",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Utente registrato con successo"
          },
          "400": {
            "description": "Dati mancanti o non validi"
          },
          "409": {
            "description": "Email già registrata"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Effettua il login",
